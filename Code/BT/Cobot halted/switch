#include <SoftwareSerial.h>

#define pin_switch 8
#define pin_led 6

SoftwareSerial BTSerial(2, 3); //RX TX

void setup() {
Serial.begin(9600);
BTSerial.begin(38400);
pinMode(pin_switch, INPUT_PULLUP); //Pull_up 저항 사용했다는 것에 유의
pinMode(pin_led, OUTPUT);
}

void loop() {
int state_switch = digitalRead(pin_switch);
int state_gripper = 0;

BTSerial.write(state); // 스위치 on이면 0이 쏴짐 -> cobot 끄기

if(BTSerial.available()){
state_gripper = BTSerial.read(); // 떨구면 1이 들어옴
}

digitalWrite(pin_led, state_gripper); //haptic sensor input이 1이라고 가정하여 사용

delay(40);
}






